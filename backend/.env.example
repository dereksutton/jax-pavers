# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/jax_pavers
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/jax_pavers
